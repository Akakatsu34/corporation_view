<div class="show-main">
  <div class="show-main-left">
    <div class="show-corporation-information">
      <div class="show-corporation-name">
         <a href="https://www.google.com/search?q=<%= @corporation_name %>&sourceid=chrome&ie=UTF-8" target="_blank" rel="noopener noreferrer"><%= @corporation_name %></a> 
      </div>
      <div class="show-security_code">
        <%= @code %>
      </div>
    </div>
    <div class="show-market">
      <div class="show-year">
        <h2>年度</h2>
        <%= @year %>年
      </div>
      <div class="show-market-name">
        <h2>市場</h2>
        <%= @market %>
      </div>
      <div class="show-sector">
        <h2>業種</h2>
        <%= @sector_thirty_three_name %>
      </div>
    </div>
    <div class="show-type">
      <div class="show-address">
        <h2>住所</h2>
        <%= @address %>
      </div>
      <div class="show-closing-date">
        <h2>決算日</h2>
        <%= @closing_date %>
      </div>
    </div>
  </div>
  <div class="show-main-center">
    <div class="show-bs">
      <canvas id="bs-graph" ></canvas>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
      <script>
        var ctx = document.getElementById('bs-graph');
        var myChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['貸方','借方'],
            datasets: [{
              label: ['総資産'],
              data: [<%= @asset %>, 0],
              backgroundColor: [
                'rgba(75, 255, 192, 1)',
              ],
              borderColor: [
                'rgba(75, 255, 192, 1)',
              ],
              borderWidth: 1
              },{
              label: ['純資産'],
              data: [ 0, <%= @net_asset %>],
              backgroundColor: [
                'rgba(54, 162, 235, 1)',
                'rgba(54, 162, 235, 1)',
              ],
              borderColor: [
                'rgba(54, 162, 235, 1)',
                'rgba(54, 162, 235, 1)',
              ],
              borderWidth: 1
              },{
              label: '固定負債',
              data: [ 0, <%= @noncurrent_liability %>],
              backgroundColor: [
                'rgba(255, 66, 72, 1)',
                'rgba(255, 66, 72, 1)',
              ],
              borderColor: [
                'rgba(255, 66, 72, 1)',
                'rgba(255, 66, 72, 1)',
              ],
              borderWidth: 1
              },{
              label: '流動負債',
              data: [  0, <%= @current_liability %>],
              backgroundColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(255, 99, 132, 1)',
              ],
              borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(255, 66, 72, 1)',
              ],
              borderWidth: 1
              }],
            },
          options: {
            title: {
              display: true,
              text: '貸借対照表'
            },
            scales: {
              xAxes: [{
                stacked: true,
                categoryPercentage: 1.1, 
              }],
              yAxes: [{
                stacked: true
              }]
            }
          }
        });
      </script>
    </div>
    <div class="show-cf">
      <canvas id="cf-graph"></canvas>
      <script>
        var ctx = document.getElementById('cf-graph');
        var myChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['営業', '投資', '財務'],
            datasets: [{
              label: 'キャッシュフロー',
              data: [<%= @operating %>, <%= @investiment %>, <%= @financing %>],
          backgroundColor: [
            'rgba(54, 162, 235, 1)',
            'rgba(255, 99, 132, 1)',
            'rgba(255, 206, 86, 1)',
          ],
          borderColor: [
            'rgba(54, 162, 235, 1)',
            'rgba(255, 99, 132, 1)',
            'rgba(255, 206, 86, 1)',
          ],
            borderWidth: 1
                  }]
                },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
              });
      </script>
    </div>
  </div>
  <div class="show-main-right">
    <div class="show-pl">
      <canvas id="pl-graph"></canvas>
      <script>
        var ctx = document.getElementById('pl-graph');
        var myChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['売上高', '営業利益', '経常利益', '純利益'],
            datasets: [{
              label: '損益計算書',
              data: [<%= @net_sale %>, <%= @operating_income %>, <%= @ordinary_income %>, <%= @profit_loss %>],
              backgroundColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 255, 192, 1)',
              ],
              borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 255, 192, 1)',
              ],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      </script>
    </div>
    <div class="show-other">
      <div class="show-other-left">
        <div class="show-market-capitalization">時価総額</div>
        <div class="show-employee">従業員数</div>
      </div>
      <div class="show-other-right">
        <div class="show-stock-price">株価</div>
        <div class="show-other-item">その他</div>
      </div>
    </div>
  </div>
</div>
